@{
  Layout = "_Layout";
}

@model Market.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor does not contain any sweets</p>
}
else
{
  <h4>Sweets the flavor contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Sweet.Details</li>
    @using (Html.BeginForm("DeleteSweet", "Sweets"))
    {
      @Html.Hidden("joinId", @join.FlavorSweetId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
}

<p>@Html.ActionLink("Add a sweet", "AddSweet", new { id = Model.FlavorId })</p>

<p>@Html.ActionLink("Back to flavors", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>