@{
  Layout = "_Layout";
}

@using Market.Models;
@model IEnumerable<Market.Models.Flavor>
@model List<Market.Models.Flavor>;

<h1>Flavors for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Details}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>